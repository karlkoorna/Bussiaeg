https://api.bussiaeg.ee {
	gzip
	limits 1mb
	ratelimit * / 4 4 second
	cors / https://bussiaeg.ee
	header / X-Content-Type-Options "nosniff"
	proxy / 127.0.0.1:81
}

http://bussiaeg.ee,
http://www.bussiaeg.ee,
https://www.bussiaeg.ee {
	redir / https://bussiaeg.ee
}

https://bussiaeg.ee {
	gzip
	header / Content-Security-Policy "default-src bussiaeg.ee api.bussiaeg.ee www.google-analytics.com; script-src 'unsafe-inline' bussiaeg.ee googletagmanager.com; style-src 'unsafe-inline' bussiaeg.ee fonts.googleapis.com; font-src fonts.gstatic.com; img-src * data:;"
	header / Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
	header / X-Content-Type-Options "nosniff"
	header / X-XSS-Protection "1; mode=block"
	header / X-Frame-Options "deny"
	expires {
		match /(static|assets) 3m
	}
	rewrite {
		to {path} /
	}
	root web/build
}
